        </view>
        <view class='pj_cont'>
          {{item.content}}
        </view>
      </view>
    </block> -->
</view>
</block>
<!--商品详情-->
<view class='details_box'>
  <view style="height:40px;line-height: 40px;border-bottom:1px solid #f5f5f5;">
     <view>商品详情</view>
  </view>
  <view style='padding:10px 0px;'>
      <view class="wxParse">
         {{item.detial}}
      </view>
    </view>
</view>
 
<!--底部浮动 start-->
<view class="foot-nav ">
  <view class="flex con gridXt tc">
    <view class="shouye center" bindtap='shouye'>
      <view class="iconfont" >首页</view>
    </view>
